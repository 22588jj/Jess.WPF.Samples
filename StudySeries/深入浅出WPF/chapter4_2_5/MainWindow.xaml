<Window x:Class="chapter4_2_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <sys:String x:Key="myString">Hello WPF ResourceKey!</sys:String>
    </Window.Resources>
    <StackPanel Background="Gray">
        <TextBox Text="{StaticResource ResourceKey=myString}" Margin="5" />
        <TextBox x:Name="textBox1" Margin="5"/>
        <Button Content="Show" Click=" Button_Click" Margin="5"/>
    </StackPanel>
</Window>
