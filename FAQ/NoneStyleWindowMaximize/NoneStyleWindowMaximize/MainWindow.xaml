<Window x:Class="NoneStyleWindowMaximize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoneStyleWindowMaximize" 
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True" Background="Transparent" ResizeMode="CanMinimize"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="gd_main" Background="Red" >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Name="drag_panel" Background="Transparent" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Name="btn_maximize" Content="最大化/还原"></Button>
            <Button Name="btn_close" Content="关闭"/>
        </StackPanel>
    </Grid>
</Window>
